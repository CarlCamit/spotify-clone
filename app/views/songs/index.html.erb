<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Duration</th>
      <th>Released at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <div class=<%=decade_checker(song.released_at)%>>
        <p><%= link_to song.name, song %></p>
        <p><%= song.artist.name %></p>
        <p><%= format_duration(song.duration) %></p>
        <p><%= song.released_at %></p>
        <p>
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    <% end %>
  </tbody>
</table>

